<h2 class="text-center my-3">Create a Short URL</h2>

<%= form_with(model: @url_connector, local: true) do |form| %>
  <% if @url_connector.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@url_connector.errors.count, "error") %> prohibited this url_connector from being saved:</h2>

      <ul>
        <% @url_connector.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group mb-3">
    <%= form.text_field :long_url, class: 'form-control', placeholder: "Paste long URL here" %>
    <div class="input-group-append">
      <%= form.submit 'Shorten', class:"input-group-text btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render partial: 'url_connector', collection: @url_connectors %>
